#!/bin/sh

# This is a replacement for SDL 1.2's sdl-config script. You only need this
#  if you are trying to build something uses SDL 1.2. If you have something
#  already built that you want to drop sdl12-compat into, just replace
#  the copy of SDL 1.2 with a build of sdl12-compat in the appropriate way.

# Copied and modified from SDL2's sdl2-compat.

prefix=/usr
exec_prefix=${prefix}
exec_prefix_set=no
libdir=/usr/lib
includedir=/usr/include

usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
#usage="\
#Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 1.2.65
      ;;
    --cflags)
      echo -I${includedir}/SDL -D_GNU_SOURCE=1 -D_REENTRANT
      ;;
    --libs)
      echo -L${libdir}  -lSDL
      ;;
#    --static-libs)
##    --libs|--static-libs)
#      echo -L${libdir} -lSDL 
#      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
